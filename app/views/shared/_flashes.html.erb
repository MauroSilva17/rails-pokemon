<% if alert %>
  <div class="alert alert-warning alert-dismissable fade show m-1" role="alert">
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    <%= alert %>
  </div>
<% end %>

<% if flash[:success] %>
  <div class="flash flash-success alert alert-dismissible fade show" role="alert">
    <%= flash[:success] %>
  <%# <span><strong>Yay!</strong> ðŸŽ‰ you successfully signed in to our service.</span> %>
  <a data-bs-dismiss="alert" aria-label="Close">
    <i class="fas fa-times"></i>
  </a>
</div>
<% end %>

<% if flash[:error] %>
  <div class="alert alert-danger alert-dismissable fade show m-1" role="alert">
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    <%= flash[:error] %>
  </div>
<% end %>




